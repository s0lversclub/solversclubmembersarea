extends ../layouts/base
block content
  div.content

    div.columns
      div.column.is-2
        a(href="/profile") My Profile
      div.column.is-2
        a(href="/update") Update Profile
      div.column.is-2
        a(href="/delete") Delete Profile
      div.column.is-2
        a(href="/forgot") Change Pass.
      div.column.is-2
        a(href="/logout") Logout
    div(class="content is-large")
      h1
        .is-orange Update Profile
    h3 To update your profile you will be redirected to a secure external Airtable form which will open in a new window.
    h3 You may return to continue navigating once you have made your changes.
    h3
      a(href=`${user.update}` target="_blank") Update Profile

extends ../layouts/base

block content
  h1.title Activate Solvers Club Account

  if (message)
    .notification.is-success
      =message
    br

  form(action="/user/activate" method="POST")
    .field
      label.label(for="username") Email
        input.input(type='email' name="username" id="username")


    .field
      .control
        button.button.is-link Activate Account
